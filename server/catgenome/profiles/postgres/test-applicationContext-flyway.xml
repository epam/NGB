<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="embeddedPostgresConfig" class="com.epam.catgenome.util.EmbeddedPostgresDataSourceFactory" />

    <!-- Registers & configures Flyway, used for embedded database update purposes -->
    <bean id="flyway" class="org.flywaydb.core.Flyway" depends-on="dataSource" init-method="migrate">
        <property name="schemas" value="catgenome"/>
        <property name="dataSource" ref="dataSource"/>
        <property name="sqlMigrationPrefix" value="v"/>
        <property name="locations">
            <list>
                <value>classpath:database/catgenome/postgres</value>
                <value>classpath:database/test/postgres</value>
            </list>
        </property>
        <property name="placeholders">
            <map>
                <entry key="default.admin">
                    <value>${security.default.admin}</value>
                </entry>
            </map>
        </property>
    </bean>
</beans>