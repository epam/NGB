<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean class="com.epam.catgenome.dao.session.NGBSessionDao" id="sessionDao" autowire="byName">
        <property name="ngbSessionSequenceName" value="catgenome.s_session"/>
        <property name="filterNgbSessionsQuery">
            <value>
                <![CDATA[
                    SELECT
                        id,
                        name,
                        description,
                        reference_id,
                        chromosome,
                        start_position,
                        end_position,
                        owner,
                        session_value
                    FROM catgenome.ngb_session
                    @WHERE@
                ]]>
            </value>
        </property>
        <property name="loadNgbSessionQuery">
            <value>
                <![CDATA[
                    SELECT
                        id,
                        name,
                        description,
                        reference_id,
                        chromosome,
                        start_position,
                        end_position,
                        owner,
                        session_value
                    FROM catgenome.ngb_session
                    WHERE id = ?
                ]]>
            </value>
        </property>
        <property name="createNgbSessionQuery">
            <value>
                <![CDATA[
                    INSERT INTO catgenome.ngb_session (
                        id,
                        name,
                        description,
                        reference_id,
                        chromosome,
                        start_position,
                        end_position,
                        owner,
                        session_value)
                    VALUES (
                        :ID,
                        :NAME,
                        :DESCRIPTION,
                        :REFERENCE_ID,
                        :CHROMOSOME,
                        :START_POSITION,
                        :END_POSITION,
                        :OWNER,
                        :SESSION_VALUE)
                ]]>
            </value>
        </property>
        <property name="deleteNgbSessionQuery">
            <value>
                <![CDATA[
                    DELETE FROM catgenome.ngb_session
                    WHERE id = ?
                ]]>
            </value>
        </property>
    </bean>
</beans>
