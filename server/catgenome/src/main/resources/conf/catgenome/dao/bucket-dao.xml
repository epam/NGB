<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean class="com.epam.catgenome.dao.bucket.BucketDao" id="bucketDao" autowire="byName">
        <property name="bucketName" value="catgenome.s_bookmark"/>
        <property name="createBucketQuery">
            <value>
                <![CDATA[
                    INSERT INTO catgenome.bucket (
                        bucket_id,
                        bucket_name,
                        access_key_id,
                        secret_access_key,
                        owner)
                    VALUES (
                        :BUCKET_ID,
                        :BUCKET_NAME,
                        :ACCESS_KEY_ID,
                        :SECRET_ACCESS_KEY,
                        :OWNER)
                ]]>
            </value>
        </property>
        <property name="updateBucketOwnerQuery">
            <value>
                <![CDATA[
                    UPDATE catgenome.bucket
                    SET owner = :OWNER
                    WHERE bucket_id = ?
                ]]>
            </value>
        </property>
        <property name="loadBucketByIdQuery">
            <value>
                <![CDATA[
                    SELECT
                        bucket_id,
                        bucket_name,
                        access_key_id,
                        secret_access_key,
                        owner
                    FROM
                        catgenome.bucket
                    WHERE
                        bucket_id = ?
                ]]>
            </value>
        </property>
        <property name="loadAllBucketQuery">
            <value>
                <![CDATA[
                    SELECT
                        bucket_id,
                        bucket_name,
                        owner
                    FROM
                        catgenome.bucket
                ]]>
            </value>
        </property>
    </bean>
</beans>