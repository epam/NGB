{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true

  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "plugins": [
    "babel",
    "flowtype",
    "flow-vars"
  ],
  "globals": {
    "__ENV__": true,
    "__DEV__": true,
    "module": true,
    "process": true

  },
  "rules": {
    "indent": ["error", 4, { "SwitchCase": 1 }],
    "linebreak-style": 0,
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "accessor-pairs": 1,
    "array-callback-return": 2,
    "complexity": [1, {"maximum": 10}],
    "dot-notation": 2,
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-console": "error",
    "no-debugger": 0,
    "no-alert": 2,
    "no-extend-native": 2,
    "no-labels": 2,
    "no-loop-func": 2,
    "no-magic-numbers": [1, {"ignore": [0, 1, -1, 2]}],
    "yoda": 2,
    "arrow-body-style": 2,
    "prefer-const": 2,
    "prefer-template": 2,
    "prefer-reflect": 0,
    "flowtype/space-after-type-colon": [1, "always"],
    "flowtype/space-before-type-colon": [1, "never"],
    "max-lines": ["warn", 500],
    "max-params": ["warn", 10],
    "max-len": ["warn", 150],
    "no-var": "error",
    "flow-vars/define-flow-type": 1,
    "flow-vars/use-flow-type": 1,
    "sort-vars": ["warn", { "ignoreCase": true }],
    "sort-keys": ["warn", "asc", {"caseSensitive": true, "natural": false}],
    "sort-imports": ["warn", {
      "ignoreCase": false,
      "ignoreMemberSort": false,
      "memberSyntaxSortOrder": ["none", "all", "multiple", "single"]
    }]

  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": false
    }
  }
}